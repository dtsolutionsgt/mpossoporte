<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Sucursales">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:id="@+id/reltop"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/strip">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/imageView"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="Sucursales"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="false"
                android:layout_marginStart="10dp"
                android:src="@drawable/mposblanco" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relbot"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@drawable/frame_rect">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:onClick="doExit"
                android:padding="5dp"
                android:src="@drawable/icon_back" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rellist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/relbot"
            android:layout_below="@+id/reltop"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:onClick="doClear"
                android:src="@drawable/erase" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/listview1"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/frame_btn"
                android:clickable="true"
                android:gravity="center"
                android:onClick="doSearch"
                android:paddingHorizontal="10dp"
                android:text="Buscar"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTextText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/textView8"
                android:ems="10"
                android:inputType="text" />

            <ListView
                android:id="@+id/listview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/editTextText4"
                android:layout_margin="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="-42dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp" />
        </RelativeLayout>


    </RelativeLayout>